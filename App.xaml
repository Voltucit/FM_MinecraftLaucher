<Application x:Class="忘却的旋律_EP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:忘却的旋律_EP"
             xmlns:ui="https://opensource.panuon.com/wpf-ui"


             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Panuon.WPF.UI;component/control.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <ui:ToastSettings x:Key="toastSetting" Spacing="25">
                <ui:ToastSettings.LabelStyle>
                    <Style TargetType="Label" BasedOn="{StaticResource {x:Static ui:Toast.LabelStyleKey}}">
                        <Setter Property="Background" Value="#77787b" />
                        <Setter Property="Foreground" Value="Black" />
                        <Setter Property="ui:LabelHelper.CornerRadius" Value="15" />
                        <Setter Property="ui:LabelHelper.ShadowColor" Value="#999d9c" />
                        <Setter Property="ui:ShadowHelper.Opacity" Value="0.5" />
                    </Style>
                </ui:ToastSettings.LabelStyle>
            </ui:ToastSettings>
        </ResourceDictionary>
    </Application.Resources>
</Application>
